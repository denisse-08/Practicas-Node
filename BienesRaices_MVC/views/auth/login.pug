extends ../layout/index

block contenido
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center Bienes 
            span.font-normal Raices
        h2.text-center.text2xl.font-extrabold Iniciar Sesion
        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
                form.space-y-5
                    div
                        label.block.text-sm.uppercase.text-gray-600.mb-2.font-bold(for="email")  Email
                        input#email.w-full.px-3.py-3.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu email" type="email" name = "email")
                    div
                        label.block.text-sm.uppercase.text-gray-600.mb-2.font-bold(for="password") Contraseña
                        input#password.w-full.px-3.py-3.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Contraseña" type="password" name = "password")
                    div.flex.items-center.justify-between
                        a.text-gray-500.text-xs(href="/auth/registro") No tienes Cuenta? Registrate
                        a.text-gray-500.text-xs(href="/auth/recuperarContrasena") Olvide mi contraseña
                    input(class="w-full bg-indigo-700 hover:bg-indigo-600 text-white font-bold py-3 cursor-pointer" type="submit" value="Crear Cuenta")
                    