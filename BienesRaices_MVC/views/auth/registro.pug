extends ../layout/index

block contenido
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center Bienes 
            span.font-normal Raices
        h2.text-center.text2xl.font-extrabold Crear Cuenta
        
        if errores
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg
        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
                form.space-y-5(method="POST" action='/auth/registro')
                    div 
                        label.block.text-sm.uppercase.text-gray-600.mb-2.font-bold(for="nombre") Nombre
                        input#nombre.w-full.px-3.py-3.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu nombre" type="text" name = "nombre" value =usuario ? usuario.nombre : '')
                    div
                        label.block.text-sm.uppercase.text-gray-600.mb-2.font-bold(for="email")  Email
                        input#email.w-full.px-3.py-3.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu email" type="email" name = "email" value =usuario ? usuario.email: '')
                    div
                        label.block.text-sm.uppercase.text-gray-600.mb-2.font-bold(for="password") Contraseña
                        input#password.w-full.px-3.py-3.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Contraseña" type="password" name = "password")
                    div
                        label.block.text-sm.uppercase.text-gray-600.mb-2.font-bold(for="repetir_password") Repetir contraseña
                        input#repetir_password.w-full.px-3.py-3.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Repite tu contraseña" type="password" name = "repetir_password")

                    div.flex.items-center.justify-between
                        a.text-gray-500.text-xs(href="/auth/login") Ya tienes cuenta? Inicia Sesion 
                        a.text-gray-500.text-xs(href="/auth/recuperarContrasena") Olvide mi contraseña
                    input(class="w-full bg-indigo-700 hover:bg-indigo-600 text-white font-bold py-3 cursor-pointer" type="submit" value="Crear Cuenta")
                    